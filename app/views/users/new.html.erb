<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :username %>

      <%= f.submit "Create an account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
<%= form_for(@user) do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username, class: 'form-control' %>

<% end %>

  </div>
</div>